{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "resources/ts/*"
      ],
      "@layouts/*": [
        "resources/ts/@layouts/*"
      ],
      "@layouts": [
        "resources/ts/@layouts"
      ],
      "@core/*": [
        "resources/ts/@core/*"
      ],
      "@core": [
        "resources/ts/@core"
      ],
      "@images/*": [
        "resources/images/*"
      ],
      "@styles/*": [
        "resources/styles/*"
      ],
      "@core-scss/*": [
        "resources/styles/@core"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ]
  },
  "include": [
    "vite.config.*",
    "env.d.ts",
    "shims.d.ts",
    "resources/ts/**/*",
    "resources/ts/**/*.vue",
    "themeConfig.ts",
    "auto-imports.d.ts",
    "components.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "resources/ts/@iconify/*"
  ]
}
